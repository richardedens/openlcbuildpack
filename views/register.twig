				document.write(new Date().getFullYear())
			</script>2020 Â© Think1st
		</footer>

		<!-- Vendor js -->
		<script src="/assets/js/vendor.min.js"></script>

		<!-- App js -->
		<script src="/assets/js/app.min.js"></script>


	</body>
</html>
